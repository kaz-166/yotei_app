<div class="event-list">
    <center>
        <div id="event_top">
            <h2>RECENT EVENTS</h2>
        </div>
        <!-- すべてのイベントの中から現在のユーザが作成したものを表示する -->
            <% Event.all.order(start_time: "ASC").each do |event| %>
                <% if (current_user.id == event.user_id) && (!event_finished?(event)) %>
                    <%= render partial: 'event_list', locals: {event: event} %>
                <% end %>
            <% end %>
        <hr>
        <%= link_to "過去の予定を見る", '/pages/show_old' %>
        <br>
        <%= link_to "新しい予定を作成する", '/events/new' %>
    </center>
</div>

<div class="friend-list">
    <center>
        <h2>FRIEND</h2>
        <p>フレンド一覧を表示</p>
        <% User.friend(current_user.id).each do |u| %>
            <%= image_tag('user.png', :size =>'48x48') %>
            <%= u.username %>
            <br>
        <% end %>

        <%= form_tag("/users/search",:method => 'get') do %>
            <%= text_field_tag :search %>
            <%= submit_tag 'Search', :name => nil %>
        <% end %>
    </center>
</div>


