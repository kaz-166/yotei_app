
<%= form_for(@event) do |f| %>

    <%= f.label :イベント名 %>
    <%= f.text_field :name %>
    <br>
    <%= f.label :イベント概要 %>
    <br>
    <%= f.text_area :abstract %>
    <br>
    <%= f.label :場所 %>
    <%= f.text_field :location %>
    <br>
    <% if flash[:danger] %>
        <div class="event_error_message">
            <%= flash[:danger] %>
        </div>
    <% end %>
    <%= f.label :開始時刻 %>
    <%= f.datetime_select :start_time %>
    <br>
    <%= f.label :終了時刻 %>
    <%= f.datetime_select :end_time %>
    <hr>
    <%= f.label :参加者の追加 %>
    <br>
    <% User.friend(current_user.id).each do |u| %>
        <%= check_box_tag('add_ids[]', value = u.id, checked = event_participants?(@event.id, u.id), options = {}) %>
        <%= render partial: 'users/user_mini_image', locals: {usr: u} %>
        <%= u.username %>
        <br>
    <% end %>

    <hr>
    <div class="open_range">
        <%= f.label :公開範囲 %>
        <%= f.radio_button :open_range, :private_range %>
        <%= f.label :open_range, "参加者のみ", {value: :private_range, style: "display: inline-block;"} %>
        <%= f.radio_button :open_range, :public_range %>
        <%= f.label :open_range, "フレンド全員", {value: :public_range, style: "display: inline-block;"} %>
    </div>
    <hr>
    <%= f.submit "作成" %>
<% end %>
