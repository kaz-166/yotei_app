
<%= form_for(@event) do |f| %>
    <%= f.label :イベント名 %>
    <%= f.text_field :name %>
    <br>
    <%= f.label :イベント概要 %>
    <%= f.text_field :abstract %>
    <br>
    <%= f.label :場所 %>
    <%= f.text_field :location %>
    <br>
    <%= f.label :開始時刻 %>
    <%= f.datetime_select :start_time %>
    <br>
    <%= f.label :終了時刻 %>
    <%= f.datetime_select :end_time %>
    <br>

    <hr>
    <%= f.submit "作成" %>
<% end %>
